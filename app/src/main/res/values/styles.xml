<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para los títulos principales (con fuente VT323 y color azul) -->
    <style name="TitleStyle">
        <item name="android:fontFamily">@font/vt323regular</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/marioBlue</item>
    </style>

    <style name="TitleStyleDetail">
        <item name="android:fontFamily">@font/vt323regular</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/marioBlue</item>
    </style>

    <!-- Estilo para los subtítulos o textos secundarios -->
    <style name="SubtitleStyle">
        <item name="android:fontFamily">@font/robotocondensed</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/marioGreen</item>
    </style>

    <!-- Estilo para los textos  -->
    <style name="TextStyle">
        <item name="android:fontFamily">@font/robotocondensed</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Estilo para los textos  remarcados en negrita -->
    <style name="TextStyleBold">
        <item name="android:fontFamily">@font/robotocondensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Estilo para los botones (colores de Super Mario y fuente VT323) -->
    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/vt323regular</item>
        <item name="android:textSize">18dp</item>
        <item name="android:backgroundTint">@color/marioRed</item>
        <item name="android:textColor">@color/marioYellow</item>
    </style>

</resources>