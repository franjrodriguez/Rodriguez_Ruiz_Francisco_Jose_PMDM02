    <!-- Mario -->
    <string name="mario_name">Mario</string>
    <string name="mario_description">El héroe principal, un fontanero italiano.</string>
    <string name="mario_skills">Salto, poder de fuego</string>
    <string name="mario_detail">Mario es conocido por su valentía, rescatando a la Princesa Peach y enfrentándose a Bowser.</string>

    <!-- Luigi -->
    <string name="luigi_name">Luigi</string>
    <string name="luigi_description">El hermano menor de Mario, también fontanero.</string>
    <string name="luigi_skills">Super salto, Poltergust 3000</string>
    <string name="luigi_detail">A pesar de ser miedoso, Luigi siempre ayuda a su hermano y ha sido el héroe de la mansión encantada.</string>

    <!-- Princesa Peach -->
    <string name="peach_name">Princesa Peach</string>
    <string name="peach_description">La gobernante del Reino Champiñón.</string>
    <string name="peach_skills">Flotación, paraguas mágico, corazones curativos</string>
    <string name="peach_detail">Aunque suele ser secuestrada por Bowser, es una líder sabia y querida por su pueblo.</string>

    <!-- Bowser -->
    <string name="bowser_name">Bowser</string>
    <string name="bowser_description">El Rey de los Koopas, principal antagonista.</string>
    <string name="bowser_skills">Aliento de fuego, fuerza sobrehumana, magia oscura</string>
    <string name="bowser_detail">Constantemente intenta conquistar el Reino Champiñón y capturar a la Princesa Peach.</string>

    <!-- Yoshi -->
    <string name="yoshi_name">Yoshi</string>
    <string name="yoshi_description">Un dinosaurio verde amigo de Mario.</string>
    <string name="yoshi_skills">Lengua extensible, creación de huevos, aleteo</string>
    <string name="yoshi_detail">Fiel compañero de Mario desde que era bebé, siempre dispuesto a ayudar en las aventuras.</string>

    <!-- Toad -->
    <string name="toad_name">Toad</string>
    <string name="toad_description">Habitante y guardián del Reino Champiñón.</string>
    <string name="toad_skills">Velocidad, conocimiento del reino, agilidad</string>
    <string name="toad_detail">Siempre está dispuesto a ayudar a Mario y a la Princesa Peach con información y objetos útiles.</string>

    <!-- Wario -->
    <string name="wario_name">Wario</string>
    <string name="wario_description">El rival codicioso de Mario.</string>
    <string name="wario_skills">Fuerza bruta, embestida, transformaciones por ajo</string>
    <string name="wario_detail">Obsesionado con el dinero y los tesoros, a veces colabora con Mario por interés propio.</string>

    <!-- Donkey Kong -->
    <string name="donkey_kong_name">Donkey Kong</string>
    <string name="donkey_kong_description">Un poderoso gorila con corbata.</string>
    <string name="donkey_kong_skills">Super fuerza, palmada al suelo, lanzamiento de barriles</string>
    <string name="donkey_kong_detail">Protector de la Isla Kong y su reserva de plátanos, antiguo rival convertido en aliado.</string>

    <!-- Koopa Troopa -->
    <string name="koopa_troopa_name">Koopa Troopa</string>
    <string name="koopa_troopa_description">Soldado tortuga del ejército de Bowser.</string>
    <string name="koopa_troopa_skills">Caparazón protector, capacidad de deslizamiento</string>
    <string name="koopa_troopa_detail">Forman la base del ejército de Bowser, son conocidos por su caparazón que sirve tanto de defensa como de arma.</string>

    <!-- Goomba -->
    <string name="goomba_name">Goomba</string>
    <string name="goomba_description">Enemigo básico con forma de champiñón.</string>
    <string name="goomba_skills">Embestida, movimiento en grupo</string>
    <string name="goomba_detail">Antiguos habitantes del Reino Champiñón que traicionaron a la Princesa Peach para unirse a Bowser.</string>

    <!-- Princesa Daisy -->
    <string name="daisy_name">Princesa Daisy</string>
    <string name="daisy_description">La princesa deportista de Sarasaland.</string>
    <string name="daisy_skills">Habilidades atléticas, poder de las flores</string>
    <string name="daisy_detail">Amiga cercana de Peach y pareja de Luigi, destaca en todas las competiciones deportivas.</string>

    <!-- Rosalina -->
    <string name="rosalina_name">Rosalina</string>
    <string name="rosalina_description">La misteriosa guardiana del cosmos.</string>
    <string name="rosalina_skills">Magia estelar, control de Destellos, levitación</string>
    <string name="rosalina_detail">Viaja por el espacio en su Observatorio del Cometa, cuidando de los Destellos como su familia.</string>

    <!-- Toadette -->
    <string name="toadette_name">Toadette</string>
    <string name="toadette_description">Una Toad rosada experta en varios campos.</string>
    <string name="toadette_skills">Construcción, música, transformación en Peachette</string>
    <string name="toadette_detail">Talentosa en ingeniería y música, puede transformarse usando la Super Corona.</string>

    <!-- Waluigi -->
    <string name="waluigi_name">Waluigi</string>
    <string name="waluigi_description">El rival tramposo de Luigi.</string>
    <string name="waluigi_skills">Agilidad, trampas, habilidades deportivas</string>
    <string name="waluigi_detail">Compañero de fechorías de Wario, destaca especialmente en los eventos deportivos del Reino Champiñón.</string>

    <!-- Kamek -->
    <string name="kamek_name">Kamek</string>
    <string name="kamek_description">Un Magikoopa al servicio de Bowser.</string>
    <string name="kamek_skills">Magia, vuelo en escoba, transformación de objetos</string>
    <string name="kamek_detail">Consejero principal de Bowser y su antiguo cuidador, usa su poderosa magia para causar problemas.</string>

