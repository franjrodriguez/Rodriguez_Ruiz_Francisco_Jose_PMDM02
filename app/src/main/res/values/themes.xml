<resources>

<!-- Tema principal de la app -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Colores principales -->
    <item name="colorPrimary">@color/marioRed</item>
    <item name="colorPrimaryDark">@color/marioBlue</item>
    <item name="colorAccent">@color/marioYellow</item>

    <!-- Fondo de la actividad -->
    <item name="android:windowBackground">@color/skyBlue</item>

    <!-- Fuente predeterminada para la app -->
    <item name="android:fontFamily">@font/robotocondensed</item>

    <!-- PersonalizaciÃ³n de la barra de herramientas -->
    <item name="toolbarStyle">@style/ToolbarStyle</item>
</style>

<!-- Estilo para la Toolbar -->
<style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
    <item name="android:background">@color/marioRed</item>
    <item name="android:titleTextColor">@color/marioYellow</item>
    <item name="android:fontFamily">@font/vt323regular</item>
</style>

</resources>