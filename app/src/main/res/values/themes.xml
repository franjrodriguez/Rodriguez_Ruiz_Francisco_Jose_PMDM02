<resources>

<!-- Tema principal de la app -->
<style name="AppTheme" parent="Theme.Material3.DayNight">

    <!-- Deshabilitar la ACtionBar que Android aporta por defecto -->
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>

    <!-- Configuracion de la pantalla de Splash -->
    <item name="android:windowSplashScreenBackground">@color/skyBlue</item>
    <item name="android:windowSplashScreenAnimatedIcon">@drawable/marioyamigos</item>
    <item name="android:windowSplashScreenAnimationDuration">2000</item>
    <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>

    <!-- Colores principales -->
    <item name="colorPrimary">@color/marioRed</item>
    <item name="colorPrimaryDark">@color/marioBlue</item>
    <item name="colorAccent">@color/marioYellow</item>

    <!-- Fondo de la actividad -->
    <item name="android:windowBackground">@color/skyBlue</item>

    <!-- Fuente predeterminada para la app -->
    <item name="android:fontFamily">@font/robotocondensed</item>

    <!-- PersonalizaciÃ³n de la barra de herramientas -->
    <item name="toolbarStyle">@style/ToolbarStyle</item>
</style>

<!-- Estilo para la Toolbar -->
<style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
    <item name="android:background">@color/marioRed</item>
    <item name="android:titleTextColor">@color/marioYellow</item>
    <item name="android:fontFamily">@font/vt323regular</item>
</style>

</resources>