    <!-- Luigi -->
    <string name="luigi_name">Luigi</string>
    <string name="luigi_description">Mario\'s younger brother, also a plumber.</string>
    <string name="luigi_skills">Super jump, Poltergust 3000</string>
    <string name="luigi_detail">Despite being easily scared, Luigi always helps his brother and has been the hero of the haunted mansion.</string>

    <!-- Princess Peach -->
    <string name="peach_name">Princess Peach</string>
    <string name="peach_description">The ruler of the Mushroom Kingdom.</string>
    <string name="peach_skills">Floating, magic parasol, healing hearts</string>
    <string name="peach_detail">Although often kidnapped by Bowser, she is a wise leader beloved by her people.</string>

    <!-- Bowser -->
    <string name="bowser_name">Bowser</string>
    <string name="bowser_description">The King of the Koopas, main antagonist.</string>
    <string name="bowser_skills">Fire breath, superhuman strength, dark magic</string>
    <string name="bowser_detail">Constantly attempts to conquer the Mushroom Kingdom and capture Princess Peach.</string>

    <!-- Yoshi -->
    <string name="yoshi_name">Yoshi</string>
    <string name="yoshi_description">A green dinosaur friend of Mario.</string>
    <string name="yoshi_skills">Extendable tongue, egg laying, flutter jump</string>
    <string name="yoshi_detail">Mario\'s faithful companion since he was a baby, always ready to help on adventures.</string>

    <!-- Toad -->
    <string name="toad_name">Toad</string>
    <string name="toad_description">Inhabitant and guardian of the Mushroom Kingdom.</string>
    <string name="toad_skills">Speed, kingdom knowledge, agility</string>
    <string name="toad_detail">Always ready to help Mario and Princess Peach with information and useful items.</string>

    <!-- Wario -->
    <string name="wario_name">Wario</string>
    <string name="wario_description">Mario\'s greedy rival.</string>
    <string name="wario_skills">Brute strength, dash attack, garlic transformations</string>
    <string name="wario_detail">Obsessed with money and treasures, sometimes collaborates with Mario for his own benefit.</string>

    <!-- Donkey Kong -->
    <string name="donkey_kong_name">Donkey Kong</string>
    <string name="donkey_kong_description">A powerful gorilla wearing a tie.</string>
    <string name="donkey_kong_skills">Super strength, ground slap, barrel throwing</string>
    <string name="donkey_kong_detail">Protector of Kong Island and its banana hoard, former rival turned ally.</string>

    <!-- Koopa Troopa -->
    <string name="koopa_troopa_name">Koopa Troopa</string>
    <string name="koopa_troopa_description">Turtle soldier of Bowser\'s army.</string>
    <string name="koopa_troopa_skills">Protective shell, sliding ability</string>
    <string name="koopa_troopa_detail">They form the base of Bowser\'s army, known for their shells that serve both as defense and weapon.</string>

    <!-- Goomba -->
    <string name="goomba_name">Goomba</string>
    <string name="goomba_description">Basic enemy with mushroom shape.</string>
    <string name="goomba_skills">Charging, group movement</string>
    <string name="goomba_detail">Former inhabitants of the Mushroom Kingdom who betrayed Princess Peach to join Bowser.</string>

    <!-- Princess Daisy -->
    <string name="daisy_name">Princess Daisy</string>
    <string name="daisy_description">The athletic princess of Sarasaland.</string>
    <string name="daisy_skills">Athletic abilities, flower power</string>
    <string name="daisy_detail">Close friend of Peach and Luigi\'s partner, excels in all sporting competitions.</string>

    <!-- Rosalina -->
    <string name="rosalina_name">Rosalina</string>
    <string name="rosalina_description">The mysterious guardian of the cosmos.</string>
    <string name="rosalina_skills">Star magic, Luma control, levitation</string>
    <string name="rosalina_detail">Travels through space in her Comet Observatory, caring for the Lumas as her family.</string>

